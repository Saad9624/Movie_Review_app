<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientback"
    tools:context="com.example.danishlaptop.test.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:background="@drawable/cinemback">


        <TextView
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/T1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Sign Up"
            android:fontFeatureSettings="bold"
            android:includeFontPadding="true"
            android:textColor="#fff"
            android:textSize="30dp"
            android:background="#00000000"
            android:fontFamily="cursive"


            />
        <TextView
            android:gravity="center"
            android:fontFeatureSettings="bold"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="    ------to-----"
            android:textSize="10dp"
            android:background="#00000000"
            android:fontFamily="cursive"


            />

        <TextView
            android:gravity="center"
            android:fontFeatureSettings="bold"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Your Account"
            android:textSize="17dp"
            android:background="#00000000"
            android:fontFamily="cursive"


            />
    </LinearLayout>
    <EditText

        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/siginUserID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textColorHint="#d3d3d3"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:textColor="#fff"

        />


    <EditText

        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/signinUserName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:textColorHint="#d3d3d3"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:textColor="#fff"

        />


    <EditText
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:password="true"
        android:id="@+id/signinPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="#fff"
        android:textColorHint="#d3d3d3"
        android:fontFamily="cursive"
        android:textSize="25dp"


        />


    <EditText
        android:password="true"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"
        android:id="@+id/signinReEnterPassword"
        android:layout_width="250dp"
        android:textColorHint="#d3d3d3"
        android:fontFamily="cursive"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:hint="Re-Password"/>

    <Button
        android:id="@+id/SigninBtn"

        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyling"
        style="?android:attr/borderlessButtonStyle"
        android:text="SignIN"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"

        />

</LinearLayout>
